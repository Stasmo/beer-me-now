{% extends '::base.html.twig' %}
{% block scripts %}
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places"></script>
  <script>
    var vancouver = new google.maps.LatLng(49.2500,-123.1000);

    var map;
    function initialize() {
      var mapOptions = {
        zoom: 12,
        center: vancouver
      };
      map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
      service = new google.maps.places.PlacesService(map);
    }

    function performSearch(text) {
      var request = {
        location: vancouver,
        radius: '500',
        query: text
    };


    function callback(results, status) {
      if (status != google.maps.places.PlacesServiceStatus.OK) {
        alert(status);
        return;
      }
      result = results[0];
      var marker = new google.maps.Marker({
        map: map,
        position: result.geometry.location
      });
      $("#price").html(result.price_level);
      $("#address").html(result.formatted_address);
      $("#lat").html(result.geometry.location.lat());
      $("#lng").html(result.geometry.location.lng());
    }

      service.textSearch(request, callback);
    }

    $(document).ready(function() {
      google.maps.event.addDomListener(window, 'load', initialize);
      $("#barsearch").bind("enterKey",function(e){
        performSearch(this.value);
      });
      $("#barsearch").keyup(function(e){
        if(e.keyCode == 13)
        {
          $(this).trigger("enterKey");
        }
      });
    });

  </script>

{% endblock %}

